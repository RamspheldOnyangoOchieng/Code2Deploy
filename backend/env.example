# Database Configuration
DB_NAME=code2deploy_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your_email@gmail.com

# Supabase Configuration (for avatar uploads)
SUPABASE_URL=https://awsbirpxphjkbgcbgeco.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# CORS Settings (for frontend integration)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://0.0.0.0:3000,http://0.0.0.0:5173

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=5
JWT_REFRESH_TOKEN_LIFETIME=1

# Rate Limiting
RATE_LIMIT_LOGIN=10/hour
RATE_LIMIT_REGISTER=5/hour
RATE_LIMIT_PASSWORD_RESET=3/hour

# Security Settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Notification Settings
PUSH_NOTIFICATIONS_ENABLED=True
EMAIL_NOTIFICATIONS_ENABLED=True

# Monitoring Settings
AUDIT_LOGGING_ENABLED=True
SECURITY_MONITORING_ENABLED=True 